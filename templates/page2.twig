{% extends "_shared/layouts/base" %}

{# Page 2 - page2.twig #}

{% block content %}

    <div id="box" class="o-viewport o-viewport-1/1 md:o-viewport-4/1 text-white bg-green-500 flex justify-center items-center transition-colors duration-1000">
        <h2 class="text-2xl text-white">Page 2</h2>
    </div>

    <section class="p-12">

        <header>
            <h3 class="text-xl">Example Vue Single File Component (SFC)</h3>
            <p class="mt-2">Each component is mounted to a root element as an individual Vue application instance, and should have a unique ID attribute. Pass props to the component instance via the <code class="bg-yellow-100 px-1 inline-block">data-options=""</code> attribute. Components can be loaded on demand using strategies <code class="bg-yellow-100 px-1 inline-block">idle</code>, <code class="bg-yellow-100 px-1 inline-block">visible</code> or <code class="bg-yellow-100 px-1 inline-block">media</code> (or a combination thereof).</p>
        </header>

        <h4 class="text-lg font-bold mt-12 mb-2">London</h4>
        <div id="map-london" data-component="LocationMap" data-type="vue" data-load="visible" data-options='{"latitude":"51.509865", "longitude":"-0.118092", "caption":"A map of London"}'></div>

        <h4 class="text-lg font-bold mt-12 mb-2">New York</h4>
        <div id="map-new-york" data-component="LocationMap" data-type="vue" data-load="visible" data-options='{"latitude":"40.730610", "longitude":"-73.935242", "caption":"A map of New York"}' class="w-full"></div>

    </section>

{% endblock %}
